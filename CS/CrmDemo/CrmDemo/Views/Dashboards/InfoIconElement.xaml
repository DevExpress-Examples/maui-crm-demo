<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxcr="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
             x:Class="CrmDemo.Views.Dashboards.InfoIconElement">
    <VerticalStackLayout x:Name="rootPanel">
        <dxcr:DXImage x:Name="image" Source="{Binding Image}" HorizontalOptions="Center" HeightRequest="36"/>
        <Label Text="{Binding Value}" TextColor="{dxcr:ThemeColor OnSurface}" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
        <Label Text="{Binding Description}" TextColor="{dxcr:ThemeColor OnSurface}" HorizontalOptions="Center" LineBreakMode="WordWrap" HorizontalTextAlignment="Center"/>
    </VerticalStackLayout>
</ContentView>
